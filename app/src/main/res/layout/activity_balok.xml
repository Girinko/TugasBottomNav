<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbalok"
    tools:context=".balok">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/editTextPanjang"
            android:layout_width="325sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/inputbg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Masukan Panjang..."
            android:inputType="numberDecimal"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextLebar"
            android:layout_width="325sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/inputbg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Masukan Lebar..."
            android:inputType="numberDecimal"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextTinggi"
            android:layout_width="325sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/inputbg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Masukan Tinggi..."
            android:inputType="numberDecimal"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTinggi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Calculate"
            android:background="@drawable/buttonbg"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonCalculate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Hasil: "
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
